<% provide :title, 'Sign Up' %>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='col-md-4 col-md-offset-8'>
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, 
        url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="field"> 
            <%= f.label :name %><br />
            <div class="input-group">
              <div class="input-group-addon">
                <%= fa_icon 'user' %>
              </div>
            <%= f.text_field :name, class: 'form-control', required: 'required',
            placeholder: 'Digite o nome', autofocus: true, autocomplete: 'off' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <div class='input-group'>
              <div class="input-group-addon">
                <%= fa_icon 'envelope-o' %>
              </div>
            <%= f.email_field :email, class: 'form-control', required: 'required',
            placeholder: 'Digite o e-mail', autocomplete: "email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <div class='input-group'>
              <div class="input-group-addon">
                <%= fa_icon 'asterisk' %>
              </div>
            <%= f.password_field :password, class: 'form-control', required: 'required',
            placeholder: 'Digite a senha', autocomplete: "new-password" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <div class='input-group'>
              <div class='input-group-addon'>
                <%= fa_icon 'asterisk' %>
              </div>
            <%= f.password_field :password_confirmation, class: 'form-control',
            required: 'required', placeholder: 'Confirme sua senha', 
            autocomplete: "new-password" %>
            </div>
          </div>

          <div class="actions"><br>
            <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <div class='field'><br>
        <%= link_to user_facebook_omniauth_authorize_path, 
        class: 'btn btn-primary btn-lg' do %>
          <%= fa_icon 'facebook' %> Register with Facebook
        <% end %> 
        </div>

        <div class="field"><br>
        <%= link_to user_google_oauth2_omniauth_authorize_path,
        class: 'btn btn-danger btn-lg' do %>
          <%= fa_icon 'google' %> Register with Google
        <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>